<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>
  <div class="center hero-unit">
    <h1>amzBETA</h1>

    <h2>
      This is the BETA version.
    </h2>

    <%= link_to "Register", register_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %>